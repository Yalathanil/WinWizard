@echo off
call :Users
goto :eof

::Disables Vulnerable Services
:Service
Echo Disabling Vulnerable Services
sc config SessionEnv start= disabled 
sc config IISADMIN start= disabled 
sc config TelnetClient start= disabled
echo Enabling Important Services
sc config MpsSvc start= enabled
EXIT /B 0

::Turns on all Auditing
:Audit
Echo Auditing Enabled
auditpol /set /category:* /success:enable /failure:enable
Exit /B 0

::Turns on Firewall
:Firewall
echo Enabled Firewall
netsh advfirewall set allprofiles state on
Exit /b 0

::Serches for Media Files
:Media
setlocal
set Audio=*.mp3 *.wav *.m4a *.ogg
set Video=*.avi *.mp4 *.flv *.wmv *.mov *.webm *.mpg
set Doc=*.pdf *.docx *.txt
set /p path="Enter Users path: "
echo Locating Audio flies in %path%. 
for /f %%G IN ('dir %path%\%Audio%') do (
SET /p Input="Do you wish to keep this file (Y/N): "
:A
If Input==Y (
echo %%G is deleted 
del %%G ) 
else if Input==N (
echo %%G was not deleted
)
else (
echo Please enter a valid response
goto :A
)
endlocal
exit /b 0

::User Management
:Users
net user guest /active:no
Exit /b 0

::Policies
:Policies
net accounts /minpwlen:8 /maxpwage:90 /minpwage:15 /uniquepw:24
exit /b 0


